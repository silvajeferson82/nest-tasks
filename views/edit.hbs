{{> header}}

<div class="conatiner" style="width: 30%; margin: 100px auto 0 auto">
	<form action="/tasks/{{task.id}}?_method=Patch" method="POST">
		<div class="mb-3">
			<label class="form-label">Tarefa:</label>
			<input type="text" class="form-control" id="title" name="title" value="{{task.title}}" placeholder="Nome da Task">
		</div>
		<div class="mb-3">
			<label class="form-label">Descrição:</label>
			<input type="text" class="form-control" id="description" name="description" value="{{task.description}}"
				placeholder="Descrição da Task">
		</div>
		<select name="status" id="status" class="form-select">
			<option selected>{{task.status}}</option>
			<option value="OPEN">OPEN</option>
			<option value="IN_PROGRESS">IN_PROGRESS</option>
			<option value="DONE">DONE</option>
		</select>
		<button type="submit" class="btn btn-primary mt-3">Atualizar Tarefa</button>
		<a class="btn btn-success mt-3" href="/tasks/index">Voltar</a>
	</form>
</div>

{{> footer}}