{{> header}}

<div class="conatiner" style="width: 30%; margin: 100px auto 0 auto">
	<form action="/tasks/" method="POST">
		<div class="mb-3">
			<label class="form-label">Tarefa:</label>
			<input type="text" class="form-control" id="title" name="title" value="" placeholder="Nome da Task">
		</div>
		<div class="mb-3">
			<label class="form-label">Descrição:</label>
			<input type="text" class="form-control" id="description" name="description" value=""
				placeholder="Descrição da Task">
		</div>
		<button type="submit" class="btn btn-primary">Cadastrar Nova Tarefa</button>
	</form>
</div>

{{> footer}}